---
import { Image } from 'astro:assets';

// 使用public目录中的图片
const mainProductImage = '/images/main-product.svg';
const shoujiBannerUltraImage = '/images/shouji-banner1-ultra.webp';
const banner222MobileImage = '/images/banner222-mobile.webp';
const bannerMobileImage = '/images/banner-mobile.webp';
---

<section class="hero-mobile">
  <!-- 移动端轮播图 - WebP优化版本 -->
  <div class="mobile-banner-container" id="mobile-carousel">
    <!-- 轮播内容 -->
    <div class="mobile-carousel-inner">
      <div class="mobile-slide active">
        <Image 
          src={shoujiBannerUltraImage}
          alt="专业滑移装载机制造商"
          width={375}
          height={200}
          loading="eager"
          fetchpriority="high"
          decoding="sync"
          class="mobile-banner"
          style="width: 100%; height: 200px; object-fit: cover; object-position: center;"
        />
      </div>
      <div class="mobile-slide">
        <Image 
          src={banner222MobileImage}
          alt="高品质工程机械设备"
          width={375}
          height={200}
          loading="lazy"
          decoding="async"
          class="mobile-banner"
          style="width: 100%; height: 200px; object-fit: cover; object-position: center;"
        />
      </div>
      <div class="mobile-slide">
        <Image 
          src={bannerMobileImage}
          alt="值得信赖的合作伙伴"
          width={375}
          height={200}
          loading="lazy"
          decoding="async"
          class="mobile-banner"
          style="width: 100%; height: 200px; object-fit: cover; object-position: center;"
        />
      </div>
    </div>


  </div>
</section>

<style>
  /* 移动端轮播图样式 */
  .mobile-banner-container {
    display: block;
    width: 100%;
    height: 200px;
    position: relative;
    overflow: hidden;
  }
  
  .mobile-carousel-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .mobile-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }
  
  .mobile-slide.active {
    opacity: 1;
  }
  
  .mobile-banner {
    width: 100%;
    height: 200px;
    object-fit: cover;
    object-position: center;
  }


  
  /* 桌面端内容 - 默认显示 */
  .desktop-content {
    display: block;
  }
  
  /* 移动端轮播图 - 默认隐藏 */
  .mobile-banner-container {
    display: none;
  }
  
  /* 响应式显示控制 */
  @media (max-width: 768px) {
    .mobile-banner-container {
      display: block !important;
    }
    
    .desktop-content {
      display: none !important;
    }
  }
  
  /* 移动端图片优化 */
  @media (max-width: 768px) {
    .img-container img {
      max-width: 280px;
      height: auto;
      margin: 1rem auto;
    }
    
    /* 移动端隐藏装饰元素 */
    .decorative {
      display: none;
    }
  }

  /* 桌面端显示换行 */
  @media (min-width: 768px) {
    h1 br {
      display: block !important;
    }
  }
</style>

<script>
  // 移动端轮播图功能
  function initMobileCarousel() {
    const mobileCarousel = document.getElementById('mobile-carousel');
    if (!mobileCarousel) return;
    
    let currentSlide = 0;
    let autoSlideTimer: ReturnType<typeof setInterval> | null = null;
    const slides = mobileCarousel.querySelectorAll('.mobile-slide');
    const totalSlides = slides.length;
    const slideInterval = 4000; // 4秒切换

    function goToSlide(index: number) {
      if (index === currentSlide || totalSlides <= 1) return;
      
      // 隐藏当前幻灯片
      slides[currentSlide].classList.remove('active');
      
      // 显示新幻灯片
      currentSlide = index;
      slides[currentSlide].classList.add('active');
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      goToSlide(next);
    }

    function startAutoSlide() {
      if (totalSlides <= 1) return;
      
      autoSlideTimer = setInterval(() => {
        nextSlide();
      }, slideInterval);
    }

    function stopAutoSlide() {
      if (autoSlideTimer) {
        clearInterval(autoSlideTimer);
        autoSlideTimer = null;
      }
    }



    // 触摸滑动支持
    let startX = 0;
    let startY = 0;
    
    mobileCarousel.addEventListener('touchstart', (e) => {
      startX = e.touches[0].clientX;
      startY = e.touches[0].clientY;
    }, { passive: true });
    
    mobileCarousel.addEventListener('touchend', (e) => {
      const endX = e.changedTouches[0].clientX;
      const endY = e.changedTouches[0].clientY;
      const diffX = startX - endX;
      const diffY = Math.abs(startY - endY);
      const threshold = 50;
      
      // 只有水平滑动距离大于垂直滑动距离时才触发轮播
      if (Math.abs(diffX) > threshold && Math.abs(diffX) > diffY) {
        stopAutoSlide();
        if (diffX > 0) {
          nextSlide();
        } else {
          const prev = (currentSlide - 1 + totalSlides) % totalSlides;
          goToSlide(prev);
        }
        startAutoSlide();
      }
    }, { passive: true });

    // 暂停/恢复自动轮播
    mobileCarousel.addEventListener('mouseenter', stopAutoSlide);
    mobileCarousel.addEventListener('mouseleave', startAutoSlide);

    // 启动自动轮播
    startAutoSlide();
  }

  // 页面加载后初始化移动端轮播图
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMobileCarousel);
  } else {
    initMobileCarousel();
  }
</script>