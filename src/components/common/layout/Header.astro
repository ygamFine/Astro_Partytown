<script type="text/javascript">
  (function() {
    // ç¼“å­˜DOMå…ƒç´ 
    let mobileMenuButton = null;
    let mobileMenu = null;
    let openIcon = null;
    let closeIcon = null;
    let mainHeader = null;
    let navMenu = null;
    
    // çŠ¶æ€ç®¡ç†
    let lastScrollY = 0;
    let isMenuFixed = false;
    let isScrolling = false;

    // èŠ‚æµå‡½æ•°
    function throttle(func, limit) {
      let inThrottle;
      return function(...args) {
        if (!inThrottle) {
          func.apply(this, args);
          inThrottle = true;
          setTimeout(() => inThrottle = false, limit);
        }
      };
    }

    // ç§»åŠ¨ç«¯èœå•åˆå§‹åŒ–
    function initMobileMenu() {
      mobileMenuButton = document.getElementById('mobile-menu-button');
      mobileMenu = document.getElementById('mobile-menu');
      openIcon = document.getElementById('menu-open-icon');
      closeIcon = document.getElementById('menu-close-icon');
      
      if (!mobileMenuButton || !mobileMenu) return;

      // èœå•åˆ‡æ¢ - æ·»åŠ é˜²æŠ–
      const toggleMenu = throttle((e) => {
        e.preventDefault();
        const isHidden = mobileMenu.classList.contains('hidden');
        
        // æ‰¹é‡DOMæ“ä½œ
        requestAnimationFrame(() => {
          mobileMenu.classList.toggle('hidden');
          mobileMenuButton.setAttribute('aria-expanded', isHidden ? 'true' : 'false');
          
          if (openIcon && closeIcon) {
            openIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('hidden');
          }
        });
      }, 100);

      mobileMenuButton.addEventListener('click', toggleMenu);
      
      // ç‚¹å‡»é“¾æ¥å…³é—­èœå• - ä½¿ç”¨äº‹ä»¶å§”æ‰˜
      mobileMenu.addEventListener('click', (e) => {
        if (e.target.tagName === 'A') {
          requestAnimationFrame(() => {
            mobileMenu.classList.add('hidden');
            mobileMenuButton.setAttribute('aria-expanded', 'false');
            if (openIcon && closeIcon) {
              openIcon.classList.remove('hidden');
              closeIcon.classList.add('hidden');
            }
          });
        }
      });
    }

    // ä¼˜åŒ–çš„æ»šåŠ¨å¤´éƒ¨å¤„ç†
    function initScrollHeader() {
      mainHeader = document.getElementById('main-header');
      navMenu = document.getElementById('nav-menu');
      
      if (!mainHeader || !navMenu) return;
      
      lastScrollY = window.scrollY;
      const headerHeight = mainHeader.offsetHeight;
      
      // èŠ‚æµçš„æ»šåŠ¨å¤„ç†å‡½æ•°
      const handleScroll = throttle(() => {
        if (!mainHeader || !navMenu) return;
        
        const currentScrollY = window.scrollY;
        
        // é¿å…ä¸å¿…è¦çš„è®¡ç®—
        if (Math.abs(currentScrollY - lastScrollY) < 5) return;
        
        // æ‰¹é‡DOMæ›´æ–°
        requestAnimationFrame(() => {
          if (currentScrollY > headerHeight && !isMenuFixed) {
            // å›ºå®šèœå•
            Object.assign(navMenu.style, {
              transition: 'none',
              position: 'fixed',
              top: '0',
              left: '0',
              right: '0',
              zIndex: '50',
              width: '100%',
              transform: 'translateY(-100%)'
            });
            
            mainHeader.style.display = 'none';
            
            // è§¦å‘æ»‘å…¥åŠ¨ç”»
            navMenu.offsetHeight; // å¼ºåˆ¶é‡ç»˜
            navMenu.style.transition = 'transform 0.3s ease-in-out';
            navMenu.style.transform = 'translateY(0)';
            
            isMenuFixed = true;
          } else if (currentScrollY <= headerHeight && isMenuFixed) {
            // æ¢å¤æ­£å¸¸å¸ƒå±€
            mainHeader.style.display = 'block';
            
            Object.assign(navMenu.style, {
              transition: 'none',
              position: 'relative',
              top: 'auto',
              left: 'auto',
              right: 'auto',
              width: 'auto',
              transform: 'translateY(0)'
            });
            
            // æ¢å¤è¿‡æ¸¡
            requestAnimationFrame(() => {
              navMenu.style.transition = 'transform 0.3s ease-in-out';
            });
            
            isMenuFixed = false;
          }
        });
        
        lastScrollY = currentScrollY;
      }, 16); // çº¦60fps

      // ä¼˜åŒ–çš„æ»šåŠ¨ç›‘å¬
      window.addEventListener('scroll', handleScroll, { passive: true });
      
      // åˆå§‹çŠ¶æ€æ£€æŸ¥
      handleScroll();
    }

    // é¡µé¢å¯è§æ€§ä¼˜åŒ–
    function handleVisibilityChange() {
      if (document.hidden) {
        // é¡µé¢éšè—æ—¶æš‚åœä¸å¿…è¦çš„æ“ä½œ
        isScrolling = false;
      }
    }

    // ç§»åŠ¨ç«¯è¯­è¨€é€‰æ‹©å™¨åŠŸèƒ½
    function initMobileLanguageSelector() {
      const mobileLanguageSelector = document.getElementById('mobile-language-selector');
      
      if (mobileLanguageSelector) {
        // åˆå§‹åŒ–å½“å‰è¯­è¨€
        const currentPath = window.location.pathname;
        const langMatch = currentPath.match(/^\/([a-z]{2}(-[a-z]{2,4})?)\//);
        const currentLang = langMatch ? langMatch[1] : 'en';
        
        // è®¾ç½®å½“å‰é€‰ä¸­çš„è¯­è¨€
        mobileLanguageSelector.value = currentLang;
        
        // ç›‘å¬è¯­è¨€åˆ‡æ¢
        mobileLanguageSelector.addEventListener('change', (e) => {
          const selectedLang = e.target.value;
          const currentPath = window.location.pathname;
          
          // æ„å»ºæ–°çš„è¯­è¨€è·¯å¾„
          let newPath = '';
          
          // æ£€æŸ¥å½“å‰è·¯å¾„æ˜¯å¦å·²ç»æ˜¯å¤šè¯­è¨€è·¯å¾„
          const langMatch = currentPath.match(/^\/([a-z]{2}(-[a-z]{2,4})?)\//);
          
          if (langMatch) {
            // å½“å‰æ˜¯å¤šè¯­è¨€è·¯å¾„ï¼Œæ›¿æ¢è¯­è¨€éƒ¨åˆ†
            newPath = currentPath.replace(/^\/([a-z]{2}(-[a-z]{2,4})?)\//, `/${selectedLang}/`);
          } else {
            // å½“å‰ä¸æ˜¯å¤šè¯­è¨€è·¯å¾„ï¼Œæ·»åŠ è¯­è¨€å‰ç¼€
            if (currentPath === '/' || currentPath === '') {
              newPath = `/${selectedLang}/`;
            } else {
              newPath = `/${selectedLang}${currentPath}`;
            }
          }
          
          // è·³è½¬åˆ°æ–°è¯­è¨€é¡µé¢
          window.location.href = newPath;
        });
      }
    }

    // åˆå§‹åŒ–å‡½æ•°
    function init() {
      initMobileMenu();
      initScrollHeader();
      initMobileLanguageSelector();
      
      // æ·»åŠ é¡µé¢å¯è§æ€§ç›‘å¬
      document.addEventListener('visibilitychange', handleVisibilityChange);
    }

    // DOMå°±ç»ªååˆå§‹åŒ–
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
