---
interface Props {
  items: Array<{
    id: string | number;
    title: string;
    image: string;
    excerpt: string;
    date?: string;
    category?: string;
    href: string;
    author?: string;
    readTime?: string;
  }>;
  maxItems?: number;
}

const { items, maxItems = 10 } = Astro.props;
const displayItems = items.slice(0, maxItems);

// 格式化日期
const formatDate = (dateString: string) => {
  if (!dateString) return '';
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
};
---

<div class="news-list">
  <div class="space-y-6">
    {displayItems.map((item) => (
      <article class="news-item bg-white rounded-lg shadow-lg overflow-hidden group hover:shadow-xl transition-shadow duration-300">
        <a href={item.href} class="block">
          <div class="flex flex-col md:flex-row">
            <!-- 左侧图片 -->
            <div class="md:w-1/3 aspect-video md:aspect-[16/10] overflow-hidden">
              <img 
                src={item.image} 
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
                decoding="async"
              />
            </div>
            
            <!-- 右侧内容 -->
            <div class="md:w-2/3 p-6 flex flex-col justify-between">
              <div>
                <!-- 分类标签 -->
                {item.category && (
                  <span class="inline-block bg-red-100 text-red-600 text-xs font-medium px-2 py-1 rounded-full mb-3">
                    {item.category}
                  </span>
                )}
                
                <!-- 标题 -->
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-red-600 transition-colors line-clamp-2">
                  {item.title}
                </h3>
                
                <!-- 摘要 -->
                <p class="text-gray-600 mb-4 line-clamp-3">
                  {item.excerpt}
                </p>
              </div>
              
              <!-- 底部信息 -->
              <div class="flex items-center justify-between text-sm text-gray-500">
                <div class="flex items-center space-x-4">
                  {item.date && (
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {formatDate(item.date)}
                    </span>
                  )}
                  
                  {item.author && (
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      {item.author}
                    </span>
                  )}
                  
                  {item.readTime && (
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {item.readTime}
                    </span>
                  )}
                </div>
                
                <!-- 阅读更多 -->
                <span class="text-red-600 font-medium group-hover:underline">
                  Read More →
                </span>
              </div>
            </div>
          </div>
        </a>
      </article>
    ))}
  </div>
</div>

<style>
  .news-list {
    @apply w-full;
  }
  
  .news-item {
    @apply transform transition-all duration-300;
  }
  
  .news-item:hover {
    @apply -translate-y-1;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* 移动设备适配 */
  @media (max-width: 768px) {
    .news-item .flex {
      @apply flex-col;
    }
    
    .news-item .md\:w-1\/3,
    .news-item .md\:w-2\/3 {
      @apply w-full;
    }
  }
</style> 