---
const { 
  title, 
  description, 
  breadcrumbs, 
  currentSection, 
  contentType = 'grid',
  lang,
  pageType = 'home',
  listDescription,
  showListDescription = false,
  bannerSubtitle,
  showContentTitle = true,
  hideSidebar = false
} = Astro.props;

import Layout from '@layouts/Layout.astro';
import Breadcrumb from '../navigation/Breadcrumb.astro';
import Sidebar from './Sidebar.astro';
import PageBanner from '@components/common/banner/PageBanner.astro';
import { themeConfig } from '@config/theme.js';

// 获取页面宽度配置
const getPageWidth = () => {
  return themeConfig.layout.dynamicWidth.getPageWidth(pageType);
};

const pageWidth = getPageWidth();
---

<Layout title={title} description={description} lang={lang} pageType={pageType}>
    <!-- Page Banner - 岛屿化组件，使用Strapi通用banner背景 -->
    <PageBanner
      title={title}
      subtitle={bannerSubtitle}
      className="page-banner"
      showText={false}
      showOverlay={false}
    />

    <!-- Breadcrumb -->
    <div class="bg-white border-b">
      <div class="container mx-auto px-4 py-4" style={`max-width: ${pageWidth}`}>
        <Breadcrumb breadcrumbs={breadcrumbs} lang={lang} />
      </div>
    </div>

    <!-- Main Content -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4" style={`max-width: ${pageWidth}`}>
        <div class="flex flex-col lg:flex-row gap-8">
          {/* 根据配置和参数决定是否显示侧边栏 */}
          {themeConfig.layout.sidebar.visible && !hideSidebar && (
            <!-- Left Sidebar -->
            <div class="lg:w-1/4">
              <Sidebar currentSection={currentSection} lang={lang} />
            </div>
          )}

          {/* 根据侧边栏显示状态调整内容区域宽度 */}
          <div class={themeConfig.layout.sidebar.visible && !hideSidebar ? "lg:w-3/4" : "w-full"}>
            {/* 内容区域标题 - 可选显示 */}
            {showContentTitle && (
              <div class="mb-8">
                <h1 class="text-2xl font-bold text-gray-900 mb-4 flex items-center">
                  <div class="w-1 h-6 bg-red-600 mr-3"></div>
                  {title}
                </h1>
                
                {/* 列表描述内容 - 标题下方模式 */}
                {themeConfig.layout.listDescription.displayMode === 'below-title' && 
                 showListDescription && listDescription && (
                  <div class="mb-6">
                    <p class="text-lg text-gray-600 leading-relaxed">
                      {listDescription}
                    </p>
                  </div>
                )}
              </div>
            )}
            
            <!-- Content Slot -->
            <div class={`content-area ${contentType}`}>
              <slot />
            </div>
          </div>
        </div>
      </div>
    </section>
</Layout>

<style>
  .content-area.grid {
    @apply space-y-8;
  }
  
  .content-area.list {
    @apply space-y-6;
  }
</style> 