---
export interface Props {
  lang?: string;
  placeholder?: string;
  showInfo?: boolean;
  initialQuery?: string;
  showResults?: boolean;
}

const { 
  lang = 'zh-CN', 
  placeholder = 'æœç´¢äº§å“ã€æ–°é—»ã€æ¡ˆä¾‹...',
  showInfo = true,
  initialQuery = '',
  showResults = true
} = Astro.props;

import { buildUrl } from '../../../lib/envConfig.js';
const searchPageUrl = buildUrl(lang, '/search');

// ä»å­—å…¸è·å–å¤šè¯­è¨€
import getDictionary from '../../../i18n/dictionaries.js';
const t = getDictionary(lang);
const searchPlaceholder = t.search?.placeholder || placeholder;
const searchInfo = `ğŸ’¡ ${t.search?.tip || ''}`.trim();
const uiJson = encodeURIComponent(JSON.stringify(t.search?.ui || {}));
---

<div class="pagefind-search-container" data-lang={lang} data-search-url={searchPageUrl}>
  <!-- Pagefind æœç´¢è¾“å…¥æ¡† -->
  <div class="search-input-wrapper">
    <input 
      type="search" 
      class="search-input"
      placeholder={searchPlaceholder}
      aria-label="æœç´¢"
      id="pagefind-search-input"
      value={initialQuery || ''}
    />
    <div class="search-icon" id="pagefind-search-icon">
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </div>
  </div>


  <!-- æœç´¢æç¤º -->
  {showInfo && (
    <div class="search-info">
      <p class="text-sm text-gray-500 mt-2">
        {searchInfo}
      </p>
    </div>
  )}
</div>

<script>
  // Pagefind æœç´¢åŠŸèƒ½
  document.addEventListener('DOMContentLoaded', async function() {
    const searchInput = document.getElementById('pagefind-search-input') as HTMLInputElement;
    const searchIcon = document.getElementById('pagefind-search-icon');
    const resultsContainer = document.getElementById('pagefind-results');
    const langContainer = document.querySelector('.pagefind-search-container') as HTMLElement;
    const lang = langContainer?.dataset.lang || 'zh-CN';
    const searchPageUrl = (langContainer?.dataset.searchUrl || '/search');
    const pagefindTranslations = JSON.parse(decodeURIComponent("{uiJson}"));
    
    if (!searchInput) return;
    
    // ä»URLå‚æ•°è®¾ç½®æœç´¢å€¼
    const urlParams = new URLSearchParams(window.location.search);
    const query = urlParams.get('q') || '';
    if (query) {
      searchInput.value = query;
    }
    
    // å°è¯•åŠ è½½ Pagefind
    let pagefind: any = null;
    try {
      // åŠ¨æ€å¯¼å…¥ Pagefind
      const { PagefindUI } = await import('@pagefind/default-ui');
      
      if (resultsContainer) {
        // åˆå§‹åŒ– Pagefind UI
          pagefind = new PagefindUI({
          element: resultsContainer,
          showImages: true,
          translations: pagefindTranslations,
          processResult: (result: any) => {
            // è‡ªå®šä¹‰ç»“æœå¤„ç†
            return {
              ...result,
              meta: {
                ...result.meta,
                // æ·»åŠ è¯­è¨€ä¿¡æ¯
                lang: lang
              }
            };
          }
        });
        
        // è®¾ç½®åˆå§‹æœç´¢æŸ¥è¯¢
        if (query) {
          pagefind.triggerSearch(query);
        }
      }
    } catch (error) {
      console.warn('Pagefind åŠ è½½å¤±è´¥ï¼Œä½¿ç”¨å¤‡ç”¨æœç´¢:', error);
      // å¤‡ç”¨æœç´¢åŠŸèƒ½
      initFallbackSearch();
    }
    
    // æœç´¢è¾“å…¥å¤„ç†
    let searchTimeout: NodeJS.Timeout | null = null;
    searchInput.addEventListener('input', function(e) {
      const target = e.target as HTMLInputElement;
      const query = target.value.trim();
      
      // æ¸…é™¤ä¹‹å‰çš„è¶…æ—¶
      if (searchTimeout) {
        clearTimeout(searchTimeout);
      }
      
      // å»¶è¿Ÿæœç´¢ï¼Œé¿å…é¢‘ç¹è¯·æ±‚
      searchTimeout = setTimeout(() => {
        if (pagefind && query) {
          pagefind.triggerSearch(query);
        } else if (pagefind) {
          pagefind.triggerSearch('');
        }
      }, 300);
    });
    
    // å›è½¦é”®æœç´¢
    searchInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        const query = searchInput.value.trim();
        if (query) {
          if (pagefind) {
            pagefind.triggerSearch(query);
          } else {
            // å¤‡ç”¨æœç´¢ï¼šè·³è½¬åˆ°æœç´¢é¡µé¢
            window.location.href = `${searchPageUrl}?q=${encodeURIComponent(query)}`;
          }
        }
      }
    });
    
    // ç‚¹å‡»æœç´¢å›¾æ ‡
    if (searchIcon) {
      searchIcon.addEventListener('click', function() {
        const query = searchInput.value.trim();
        if (query) {
          if (pagefind) {
            pagefind.triggerSearch(query);
          } else {
            // å¤‡ç”¨æœç´¢ï¼šè·³è½¬åˆ°æœç´¢é¡µé¢
            window.location.href = `${searchPageUrl}?q=${encodeURIComponent(query)}`;
          }
        }
      });
    }
    
    // å¤‡ç”¨æœç´¢åŠŸèƒ½
    function initFallbackSearch() {
      if (!resultsContainer || !searchInput) return;
      
      searchInput.addEventListener('input', function(e) {
        const target = e.target as HTMLInputElement;
        const query = target.value.trim();
        if (query.length > 0) {
          // æ˜¾ç¤ºæœç´¢æç¤º
          resultsContainer.innerHTML = `
            <div class="p-4 text-center">
              <p class="text-gray-600">æ­£åœ¨æœç´¢ "${query}"...</p>
              <p class="text-sm text-gray-500 mt-2">æŒ‰å›è½¦é”®æŸ¥çœ‹å®Œæ•´æœç´¢ç»“æœ</p>
            </div>
          `;
        } else {
          resultsContainer.innerHTML = '';
        }
      });
    }
  });
</script>

<style>
  .pagefind-search-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .search-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-input {
    width: 100%;
    padding: 12px 48px 12px 16px;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 16px;
    background: white;
    transition: all 0.3s ease;
  }

  .search-input:focus {
    outline: none;
    border-color: #dc2626;
