  }

  :global(.pagefind-ui__result-meta) {
    color: #9ca3af;
    font-size: 0.875rem;
    margin-top: 0.5rem;
  }

  /* å“åº”å¼è®¾è®¡ */
  @media (max-width: 768px) {
    .pagefind-search-container {
      @apply w-full;
    }
    
    .search-input {
      @apply text-sm;
    }
    
    .search-results-container {
      max-height: 300px;
    }
  }
</style>
