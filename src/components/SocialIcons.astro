---
// 精简社交链接 - 仅保留主要平台
const socialLinks = [
  { href: "#", label: "LinkedIn", icon: "M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z" },
  { href: "#", label: "YouTube", icon: "M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.701V4.115l6.06 4.03-6.06 4.30z" },
];
---

<div class="flex space-x-4">
    {socialLinks.map(link => (
        <a 
            href={link.href} 
            aria-label={link.label}
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-gray-400 hover:text-white transition-colors duration-300"
        >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={link.icon}></path>
                {link.label === 'LinkedIn' && <circle cx="4" cy="4" r="2" stroke="none" fill="currentColor"></circle>}
            </svg>
        </a>
    ))}
</div> 