<script>
  document.addEventListener('DOMContentLoaded', function() {
    const productItems = document.querySelectorAll('.product-item');
    const progressDots = document.querySelectorAll('.progress-dot');
    const mainProductImage = document.getElementById('mainProductImage');
    
    // 产品数据
    const products = [
      {
        image: '/backhoe.webp',
        alt: 'Backhoe Loader'
      },
      {
        image: '/skid1.webp', 
        alt: 'Skid Steer Loader'
      },
      {
        image: '/telescopic.webp',
        alt: 'Telescopic Forklift'
      }
    ];

    // 更新显示
    function updateDisplay(index: number) {
      // 更新左侧小图的active状态
      productItems.forEach((item, i) => {
        if (i === index) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });

      // 更新进度条点的状态
      progressDots.forEach((dot, i) => {
        if (i === index) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });

      // 更新右侧大图
      const imgElement = mainProductImage as HTMLImageElement;
      if (imgElement && products[index]) {
        imgElement.style.opacity = '0';
        setTimeout(() => {
          imgElement.src = products[index].image;
          imgElement.alt = products[index].alt;
          imgElement.style.opacity = '1';
        }, 150);
      }
    }

    // 绑定点击事件
    productItems.forEach((item, index) => {
      item.addEventListener('click', () => {
        updateDisplay(index);
      });
    });

    // 进度条点也可以点击
    progressDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        updateDisplay(index);
      });
    });
  });
</script> 