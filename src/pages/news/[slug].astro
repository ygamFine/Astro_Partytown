---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/FooterSection.astro';
import { allNews } from '../../data/news.js';

export async function getStaticPaths() {
  return allNews.map(article => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
---

<Layout title={article.title}>
  <Header />
  <main class="py-12 md:py-20">
    <div class="container mx-auto px-4">
      <article class="max-w-4xl mx-auto">
        <!-- Article Header -->
        <header class="mb-8 text-center">
          <p class="text-red-600 font-semibold">{article.category}</p>
          <h1 class="text-3xl md:text-5xl font-bold text-gray-900 my-4 leading-tight">{article.title}</h1>
          <p class="text-gray-500">发布于: <time datetime={article.date}>{new Date(article.date).toLocaleDateString('zh-CN', { year: 'numeric', month: 'long', day: 'numeric' })}</time></p>
        </header>

        <!-- Article Image -->
        <div class="mb-8">
          <img 
            src={article.image} 
            alt={article.title} 
            class="w-full h-auto max-h-[500px] object-cover rounded-2xl shadow-lg"
            loading="lazy"
            decoding="async"
          >
        </div>

        <!-- Article Content -->
        <div class="prose max-w-none text-lg text-gray-800 leading-relaxed" set:html={article.content} />

        <!-- Back Button -->
        <div class="mt-12 text-center">
          <a href="/news" class="inline-block bg-red-600 text-white font-bold py-3 px-8 rounded-lg hover:bg-red-700 transition-colors duration-300">
            &laquo; 返回新闻列表
          </a>
        </div>
      </article>
    </div>
  </main>
  <Footer />
</Layout>

<style is:global>
  .prose h3 {
    @apply text-2xl font-bold my-6 text-gray-800;
  }
  .prose p {
    @apply mb-6;
  }
</style> 