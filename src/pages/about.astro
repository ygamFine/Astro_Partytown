---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import ContactButtons from '../components/ContactButtons.astro';
import CompanyIntro from '../components/CompanyIntro.astro';
import Advantages from '../components/Advantages.astro';
import CustomerCases from '../components/CustomerCases.astro';

const milestones = [
  { year: "1998", event: "公司成立", description: "山东永安建设机械有限公司在济南成立，初期专注于小型装载机的研发与生产。" },
  { year: "2005", event: "滑移装载机投产", description: "第一代滑移装载机成功下线，标志着公司进入新的发展阶段。" },
  { year: "2012", event: "拓展国际市场", description: "产品首次出口到东南亚，开始全球化布局。" },
  { year: "2018", event: "技术创新", description: "成立智能工程机械研究院，专注于电动化与智能化技术研发。" },
  { year: "2023", event: "新基地落成", description: "现代化新生产基地落成，产能提升200%。" }
];

const teamMembers = [
  { name: "王建国", role: "创始人 & CEO", image: "/images/case1.webp", quote: "质量是企业的生命，创新是发展的灵魂。" },
  { name: "李秀英", role: "首席技术官 (CTO)", image: "/images/case2.webp", quote: "用技术驱动未来，让工程机械更智能。" },
  { name: "张伟", role: "全球销售总监", image: "/images/case3.webp", quote: "我们的目标是将永安品牌带到世界的每个角落。" }
];
---

<Layout title="关于我们">
	<div class="animate-page-load">
		<!-- Page Header -->
		<section class="bg-gradient-to-r from-red-600 to-red-700 text-white py-20">
			<div class="container mx-auto px-4 text-center">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">关于我们</h1>
				<p class="text-xl opacity-90">专业工程机械制造商，值得信赖的合作伙伴</p>
			</div>
		</section>

		<main>
			<CompanyIntro />
			<Advantages />
			<CustomerCases />
			
			<!-- 联系我们部分 -->
			<section class="py-16 bg-gray-50">
				<div class="container mx-auto px-4">
					<div class="text-center mb-12">
						<h2 class="text-3xl font-bold text-gray-900 mb-4">与我们合作</h2>
						<p class="text-lg text-gray-600 max-w-2xl mx-auto">
							了解了我们的实力和优势，期待与您的合作。选择适合您的联系方式，让我们开始对话。
						</p>
					</div>
					<ContactButtons />
				</div>
			</section>
		</main>
	</div>
</Layout> 