---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/FooterSection.astro';
import { products } from '../../data/products.js';

export async function getStaticPaths() {
  return products.map(product => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
---

<Layout title={product.name}>
  <Header />
  <main class="bg-gray-50 py-12 md:py-20">
    <div class="container mx-auto px-4">
      <div class="bg-white p-8 rounded-2xl shadow-2xl">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Product Gallery -->
          <div>
            <div class="mb-4">
              <img id="main-image" src={product.gallery[0]} alt={product.name} class="w-full h-auto max-h-[500px] object-cover rounded-xl shadow-lg">
            </div>
            <div class="grid grid-cols-3 gap-4">
              {product.gallery.map((img, index) => (
                <button onclick=`document.getElementById('main-image').src='${img}'`>
                  <img src={img} alt={`${product.name} thumbnail ${index + 1}`} class="w-full h-24 object-cover rounded-lg shadow-md cursor-pointer border-2 border-transparent hover:border-red-600 transition">
                </button>
              ))}
            </div>
          </div>

          <!-- Product Info -->
          <div>
            <span class="inline-block bg-red-100 text-red-600 text-sm font-semibold px-3 py-1 rounded-full mb-4">{product.category}</span>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight">{product.name}</h1>
            <p class="text-2xl font-bold text-red-600 my-6">{product.price}</p>
            <p class="text-lg text-gray-700 leading-relaxed mb-8">{product.excerpt}</p>
            
            <div class="space-y-6">
              <!-- Features -->
              <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-red-200 pb-2">主要特性</h2>
                <ul class="space-y-3 text-gray-700">
                  {product.features.map(feature => (
                    <li class="flex items-start">
                      <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0 mt-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Specifications -->
              <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4 border-b-2 border-red-200 pb-2">技术规格</h2>
                <div class="grid grid-cols-2 gap-4">
                  {product.specs.map(spec => (
                    <div class="bg-gray-100 p-4 rounded-lg">
                      <p class="text-sm text-gray-600">{spec.key}</p>
                      <p class="text-lg font-bold text-gray-900">{spec.value}</p>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            <div class="mt-10">
              <a href="/contact" class="w-full text-center inline-block bg-red-600 text-white font-bold py-4 px-10 rounded-lg text-xl hover:bg-red-700 transition-colors duration-300">
                获取报价
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-16 text-center">
        <a href="/products" class="text-red-600 hover:underline font-semibold">&laquo; 返回产品中心</a>
      </div>
    </div>
  </main>
  <Footer />
</Layout> 