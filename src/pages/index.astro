---
import Layout from '../layouts/Layout.astro';
import HeroShowcase from '../components/HeroShowcase.astro';
import ProductShowcase from '../components/ProductShowcase.astro';
import CompanyIntro from '../components/CompanyIntro.astro';
import Advantages from '../components/Advantages.astro';
import HotProducts from '../components/HotProducts.astro';
import CustomerNeeds from '../components/CustomerNeeds.astro';
import CustomerCases from '../components/CustomerCases.astro';
import NewsCenter from '../components/NewsCenter.astro';
---

<Layout title="专业滑移装载机制造商">
	<!-- 🚀 Speed Index极致优化 - 移动端只显示关键内容 -->
	<main>
		<HeroShowcase />
		<!-- 移动端隐藏非关键组件，减少DOM复杂度和图片加载 -->
		<div class="hidden md:block">
			<ProductShowcase />
			<CompanyIntro />
			<Advantages />
		</div>
		<HotProducts />
		<div class="hidden md:block">
			<CustomerNeeds />
			<CustomerCases />
			<NewsCenter />
		</div>
	</main>
</Layout>
