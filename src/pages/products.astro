---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/FooterSection.astro';
import { products } from '../data/products.js';

const categories = ["全部", ...new Set(products.map(p => p.category))];
const recommendedProducts = products.slice(0, 3);
---

<Layout title="产品中心 - 山东永安建设机械集团">
  <Header />

  <main>
    <!-- Page Header -->
    <section class="bg-gray-800 text-white py-20">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-5xl font-bold leading-tight">产品中心</h1>
        <p class="text-xl mt-4">探索我们全系列的高性能工程机械</p>
      </div>
    </section>

    <!-- Product Grid -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-800">产品列表</h2>
          <p class="text-lg text-gray-600 mt-2">查看我们所有可用的产品</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
          {products.map(product => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden group">
              <a href={`/products/${product.slug}`} class="block focus-visible-ring rounded-lg" aria-label={`查看 ${product.name} 的详情`}>
                <div class="relative overflow-hidden">
                  <img src={product.image} alt={`${product.name} 的产品图片`} class="w-full h-56 object-cover transform group-hover:scale-110 transition-transform duration-300">
                  <div class="absolute top-4 left-4 bg-red-600 text-white text-sm font-semibold px-3 py-1 rounded-full">{product.category}</div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-800 mb-2 truncate">{product.name}</h3>
                  <p class="text-gray-600 mb-4 h-12 overflow-hidden">{product.excerpt}</p>
                  <div class="flex justify-between items-center">
                    <span class="text-2xl font-bold text-red-600">{product.price}</span>
                    <span class="text-white bg-gray-800 px-4 py-2 rounded-lg group-hover:bg-red-700 transition-colors duration-300">
                      查看详情
                    </span>
                  </div>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Recommended Products -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-gray-800 mb-12 text-center">明星产品推荐</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {recommendedProducts.map(product => (
            <a href={`/products/${product.slug}`} class="block bg-white rounded-lg shadow-lg overflow-hidden group focus-visible-ring" aria-label={`了解更多关于 ${product.name} 的信息`}>
              <img src={product.image} alt={`${product.name} 的推荐图片`} class="w-full h-64 object-cover">
              <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800 mb-2">{product.name}</h3>
                <p class="text-red-600 font-semibold mb-4">{product.category}</p>
                <span class="text-white bg-red-600 px-6 py-3 rounded-lg group-hover:bg-red-800 transition-colors duration-300">
                  了解更多 &rarr;
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout> 