---
export const prerender = true;

import SecondaryPageLayout from '@components/templates/layout/SecondaryPageLayout.astro';
import EnhancedGridList from '@components/templates/common/EnhancedGridList.astro';
import ViewToggle from '@components/templates/common/ViewToggle.astro';
import Pagination from '@components/templates/common/Pagination.astro';
import EmptyState from '@components/templates/common/EmptyState.astro';
import { generateStaticPaths, getCategoryInfo } from '@utils/pageUtils';
import { getDictionary } from '@i18n/dictionaries.js';
import { themeConfig } from '@config/theme.js';
import { generateCategoryBreadcrumbs, generateNewsListBreadcrumbs } from '@utils/breadcrumbUtils';
import { generateUrl } from '@utils/tools';

// 定义 Props 类型
interface PageProps {
  lang: string;
  categoryPath?: {
    path: string;
    name: string;
  };
  currentPage?: number;
  totalPages?: number;
  items?: any[];
}

const MODEL = 'news';
const MODEL_PATH = '/news';


// 生成静态路径
export async function getStaticPaths() {
  const productsPerPage = 9;
  return generateStaticPaths(productsPerPage, 'news');
}

const { lang, categoryPath, currentPage, totalPages, items } = Astro.props as PageProps;

// 将字符串形式的 categoryPath 转换为数组
const categoryPathArray = categoryPath?.path && categoryPath?.path.length > 0 
  ? categoryPath?.path.split('/').filter(segment => segment !== '')
  : [];

const categoryInfo = await getCategoryInfo(lang, categoryPathArray, MODEL);
const t = await getDictionary(lang);

// 面包屑导航
const breadcrumbs = categoryPath?.path && categoryPath?.path.length > 0 
  ? generateCategoryBreadcrumbs(lang, categoryPath, MODEL_PATH, t.product.title)
  : generateNewsListBreadcrumbs(lang);

---

<SecondaryPageLayout 
  title={categoryInfo.current.name || t.news.title}
  breadcrumbs={breadcrumbs}
  currentSection={MODEL}
  pageType={MODEL}
  contentType="grid"
  lang={lang}
>
  {items && items.length > 0 ? (
    <>
      <!-- 视图切换控件 -->
      <ViewToggle 
        currentView="grid"
        translations={t.common}
        lang={lang}
        totalItems={items?.length || 0}
        showTotal={true}
      />
      
      <!-- 新闻列表 -->
      <EnhancedGridList 
        items={items || []}
        itemsPerRow={3}
        maxRows={3}
        mode={MODEL}
        translations={t.common}
        lang={lang}
        viewMode="grid"
      />
      
      {/* 列表描述内容 - 分页上方模式 */}
      {themeConfig.layout.listDescription.displayMode === 'above-pagination' && (
        <div class="mt-8 mb-6">
          <p class="text-lg text-gray-600 leading-relaxed">
            {/* TODO: 缺少描述字段 */}
          </p>
        </div>
      )}
      
      <!-- 分页控件 -->
      {totalPages && totalPages > 1 && (
        <Pagination
          currentPage={currentPage || 1}
          totalPages={totalPages}
          baseUrl={generateUrl(lang, MODEL_PATH)}
          i18n={t.common}
        />
      )}
    </>
  ) : (
    <EmptyState 
      title={t.news.empty_state.no_news_title}
      description={t.news.empty_state.no_news_description}
      icon={MODEL}
      lang={lang}
  />
  )}
</SecondaryPageLayout> 