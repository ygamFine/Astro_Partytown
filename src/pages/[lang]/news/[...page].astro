---

import SecondaryPageLayout from '@components/templates/layout/SecondaryPageLayout.astro';
import EnhancedGridList from '@components/templates/common/EnhancedGridList.astro';
import ViewToggle from '@components/templates/common/ViewToggle.astro';
import Pagination from '@components/templates/common/Pagination.astro';
import EmptyState from '@components/templates/common/EmptyState.astro';
import { getNews } from '@apis/common.js';
import { generatePaginationPaths, parsePageParam } from '@utils/paginationUtils.js';
import { getDictionary } from '@i18n/dictionaries.js';
import { generateNewsBreadcrumbs } from '@utils/breadcrumbUtils.js';
import { themeConfig } from '@config/theme.js';
import { generateUrl } from '@utils/tools.js';

// 为分页生成静态路径，只为配置中启用的语言生成
export async function getStaticPaths() {
  const newsPerPage = 9; // 每页显示9个新闻（3行x3列）
  return generatePaginationPaths(getNews, newsPerPage, 'newPage');
}

const { lang, totalPages, items: gridItems } = Astro.props;

// 解析页码参数
const actualCurrentPage = parsePageParam(Astro.params.page, 'newPage');

// 加载翻译文件
const t = await getDictionary(lang);


// 面包屑导航
const breadcrumbs = generateNewsBreadcrumbs(lang, actualCurrentPage > 1 ? actualCurrentPage : undefined);

// 生成分页基础URL
const baseUrl = generateUrl(lang, '/news');
---

<SecondaryPageLayout 
  title={t.news.title}
  breadcrumbs={breadcrumbs}
  currentSection="news"
  pageType="news"
  contentType="grid"
  lang={lang}
>
  {gridItems.length > 0 ? (
    <>
      <!-- 视图切换控件 -->
      <ViewToggle 
        currentView="grid"
        translations={t.common}
        lang={lang}
        totalItems={gridItems.length}
        showTotal={true}
      />
      
      <!-- 新闻列表 -->
      <EnhancedGridList 
        items={gridItems}
        itemsPerRow={3}
        maxRows={3}
        mode="news"
        translations={t.common}
        lang={lang}
        viewMode="grid"
      />
      
      {/* 列表描述内容 - 分页上方模式 */}
      {themeConfig.layout.listDescription.displayMode === 'above-pagination' && (
        <div class="mt-8 mb-6">
          <p class="text-lg text-gray-600 leading-relaxed">
            
          </p>
        </div>
      )}
      
      <!-- 分页 -->
      <Pagination 
        currentPage={actualCurrentPage}
        totalPages={totalPages}
        baseUrl={baseUrl}
        i18n={t.common}
      />
    </>
  ) : (
    <EmptyState 
      title={t.news.empty_state.no_news_title}
      description={t.news.empty_state.no_news_description}
      icon="news"
      lang={lang}
  />
  )}
</SecondaryPageLayout> 