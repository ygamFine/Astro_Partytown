---
import Layout from '../../layouts/Layout.astro';
import CommonTranslationsDemo from '../../components/CommonTranslationsDemo.astro';
import { getLocaleFromPath } from '../../locales/i18n.js';
import { getEnabledLanguages } from '../../lib/i18n-config.js';

export async function getStaticPaths() {
  const enabledLanguages = getEnabledLanguages();
  
  return enabledLanguages.map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
---

<Layout title="公共语言文件演示" lang={lang}>
  <main class="container mx-auto px-4 py-8">
    <CommonTranslationsDemo lang={lang} />
  </main>
</Layout> 