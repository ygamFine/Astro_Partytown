---
import Layout from '../../layouts/Layout.astro';
import CommonTranslationsDemo from '../../components/CommonTranslationsDemo.astro';
import { getLocaleFromPath } from '../../locales/i18n.js';

export async function getStaticPaths() {
  const languages = ['en', 'zh-hans', 'zh-hant', 'fr', 'de', 'es', 'ja', 'ko'];
  
  return languages.map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
---

<Layout title="公共语言文件演示" lang={lang}>
  <main class="container mx-auto px-4 py-8">
    <CommonTranslationsDemo lang={lang} />
  </main>
</Layout> 