---
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import Breadcrumb from '../../components/templates/navigation/Breadcrumb.astro';
import { getEnabledLanguages } from '../../lib/i18n-config.js';
import { mergeTranslations } from '../../locales/i18n.js';
import { generateAboutBreadcrumbs } from '../../lib/breadcrumbUtils.js';
import { themeConfig } from '../../config/theme.js';

// 只为配置中启用的语言生成静态路径
export async function getStaticPaths() {
  const enabledLanguages = getEnabledLanguages();
  return enabledLanguages.map((lang) => ({
    params: { lang },
    props: { locale: lang },
  }));
}

const { lang } = Astro.params;
const translations = await mergeTranslations(lang, ['common', 'breadcrumb']);
const t = (translations as any).common || {};
const breadcrumbT = (translations as any).breadcrumb || {};

// 面包屑导航
const breadcrumbs = generateAboutBreadcrumbs(lang);

// 获取页面宽度配置
const getPageWidth = () => {
  return themeConfig.layout.dynamicWidth.getPageWidth('about');
};

const pageWidth = getPageWidth();
---

<Layout title="关于我们" description="山东永安建设机械集团有限公司 - 专业工程机械制造商" lang={lang} pageType="about">
  <div class="min-h-screen bg-gray-50">
    <!-- 面包屑导航 -->
    <div class="bg-white border-b">
      <div class="mx-auto px-4 py-4" style={`max-width: ${pageWidth}`}>
        <Breadcrumb breadcrumbs={breadcrumbs} lang={lang} />
      </div>
    </div>
    
    <!-- 页面头部 -->
    <div class="bg-white shadow-sm">
      <div class="mx-auto px-4 sm:px-6 lg:px-8 py-16" style={`max-width: ${pageWidth}`}>
        <div class="text-center">
          <h1 class="text-4xl font-bold text-gray-900 mb-6">关于我们</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            山东永安建设机械集团有限公司致力于为全球客户提供高品质的工程机械设备和完善的售后服务
