// 转换数据格式
const gridItems = cases.map(caseItem => ({
  id: caseItem.id,
  title: caseItem.title,
  image: caseItem.image,
  excerpt: caseItem.excerpt,
  category: caseItem.category,
  href: `/case/${caseItem.id}`
}));

// 面包屑导航
const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Cases', href: '/case' },
  { label: 'All Cases' }
];
---

<SecondaryPageLayout 
  title="Customer Success Stories"
  description="Explore comprehensive case studies showcasing our equipment performance across various industries"
  breadcrumbs={breadcrumbs}
  currentSection="cases"
  contentType="grid"
>
  <GridList 
    items={gridItems}
    itemsPerRow={3}
    maxRows={3}
    mode="case"
  />
</SecondaryPageLayout> 