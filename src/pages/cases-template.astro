  },
  {
    id: 3,
    title: "Mining Operations Enhancement",
    image: "/case3.webp",
    excerpt: "YN telescopic handlers demonstrated exceptional reliability and durability in harsh mining environments.",
    category: "Mining"
  },
  {
    id: 4,
    title: "Agricultural Modernization",
    image: "/skid1.webp",
    excerpt: "Modern farming solutions with versatile machinery, helping farmers increase productivity while maintaining sustainability.",
    category: "Agriculture"
  },
  {
    id: 5,
    title: "Disaster Relief Operations",
    image: "/skid2.webp",
    excerpt: "Emergency response and disaster relief operations showcasing equipment reliability and versatility.",
    category: "Emergency Response"
  },
  {
    id: 6,
    title: "Smart City Construction",
    image: "/skid3.webp",
    excerpt: "Intelligent construction solutions integrating IoT and automation technologies for next-generation urban development.",
    category: "Smart Technology"
  },
  {
    id: 7,
    title: "Highway Construction Project",
