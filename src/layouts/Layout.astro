---
import Header from '../components/Header.astro';
import FooterSection from '../components/FooterSection.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "山东永安建设机械集团有限公司 - 专业工程机械制造商" } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO优化 -->
    <meta name="keywords" content="滑移装载机,工程机械,建筑设备,山东永安,YONAN" />
    <meta name="author" content="山东永安建设机械集团有限公司" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- 性能优化 -->
    <meta name="theme-color" content="#e60012" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- 🚀 Speed Index智能优化 - 关键图片高优先级预加载 -->
    <link rel="preload" href="/images/mobile-banner-tiny.svg" as="image" media="(max-width: 768px)" fetchpriority="high" />
    <link rel="preload" href="/main-product.svg" as="image" media="(min-width: 769px)" fetchpriority="low" />
    
    <!-- 🚀 Partytown配置 - 第三方脚本优化 -->
    <script is:inline>
      // Partytown配置
      window.partytown = {
        forward: ['dataLayer.push', 'gtag', '_hmt.push', 'CustomerService.init', 'CustomerService.showChat', 'hbspt.forms.create'],
        debug: false
      };
    </script>
    
    <!-- DNS预连接优化 - 第三方服务 -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <link rel="preconnect" href="https://hm.baidu.com" />
    <link rel="preconnect" href="https://zz.bdstatic.com" />
    <link rel="preconnect" href="https://js.hs-scripts.com" />
    
    <!-- 🚀 Speed Index关键优化 - 预加载移动端Banner -->
    <link rel="preload" href="/images/mobile-banner-ultra-fast.svg" as="image" type="image/svg+xml" media="(max-width: 768px)" />
    
    <!-- 移动端关键CSS内联 - 首屏渲染优化 -->
    <style>
      /* 关键渲染路径CSS - 完全内联 */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body { 
        margin: 0; 
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #fff;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      /* LCP关键元素 - 立即显示 */
      .lcp-critical {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
        transition: none !important;
        will-change: auto !important;
        contain: layout style paint;
      }
      
      /* 关键内容样式 - 内联 */
      .text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
      .font-bold { font-weight: 700; }
      .text-gray-800 { color: #1f2937; }
      .mb-4 { margin-bottom: 1rem; }
      .text-center { text-align: center; }
      .py-20 { padding-top: 5rem; padding-bottom: 5rem; }
      .bg-gray-50 { background-color: #f9fafb; }
      .container { max-width: 80rem; margin-left: auto; margin-right: auto; padding-left: 1rem; padding-right: 1rem; }
      .mx-auto { margin-left: auto; margin-right: auto; }
      .px-4 { padding-left: 1rem; padding-right: 1rem; }
      .mb-16 { margin-bottom: 4rem; }
      .text-xl { font-size: 1.25rem; line-height: 1.75rem; }
      .text-gray-600 { color: #4b5563; }
      
      /* 🚀 激进Speed Index优化 - 移动端延迟内容 */
      @media (max-width: 768px) {
        .mobile-delayed-content {
          display: none !important;
        }
        
        .mobile-content-loaded .mobile-delayed-content {
          display: block !important;
          animation: fadeInSlow 0.5s ease-out;
        }
        
        /* 移动端Header优化 */
        .mobile-header-delayed {
          display: none !important;
        }
        
        .mobile-header-minimal {
          display: block !important;
        }
        
        .mobile-content-loaded .mobile-header-delayed {
          display: block !important;
        }
        
        .mobile-content-loaded .mobile-header-minimal {
          display: none !important;
        }
        
        /* 移动端Footer延迟 */
        .mobile-footer-delayed {
          display: none !important;
        }
        
        .mobile-content-loaded .mobile-footer-delayed {
          display: block !important;
        }
      }
      
      @media (min-width: 769px) {
        .mobile-delayed-content {
          display: block;
        }
        
        .mobile-header-delayed {
          display: block;
        }
        
        .mobile-header-minimal {
          display: none;
        }
        
        .mobile-footer-delayed {
          display: block;
        }
      }
      
      @keyframes fadeInSlow {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      
      /* 🚀 Speed Index终极优化 - 移动端首屏关键样式 */
      @media (max-width: 768px) {
        /* 🚀 移动端Banner最高优先级 */
        .mobile-banner-container {
          display: block !important;
          visibility: visible !important;
          opacity: 1 !important;
          z-index: 9999 !important;
          position: relative !important;
        }
        
        .mobile-banner-instant-bg {
          display: block !important;
          visibility: visible !important;
          opacity: 1 !important;
          z-index: 1 !important;
        }
        
        .mobile-banner-optimized {
          z-index: 2 !important;
        }
        
        /* 移动端其他内容延迟 */
        .mobile-delayed-content {
          display: none !important;
        }
      }
      
      /* 关键布局样式 */
      .grid { display: grid; }
      .grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
      .gap-12 { gap: 3rem; }
      .items-center { align-items: center; }
      .space-y-8 > :not([hidden]) ~ :not([hidden]) { margin-top: 2rem; }
      .leading-tight { line-height: 1.25; }
      .text-red-600 { color: #dc2626; }
      .text-lg { font-size: 1.125rem; line-height: 1.75rem; }
      .leading-relaxed { line-height: 1.625; }
      
      @media (min-width: 1024px) {
        .lg\\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .lg\\:text-left { text-align: left; }
      }
      
      /* 极致优化：预定义关键元素样式 */
      h1, h2, h3 {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
        will-change: auto !important;
      }

      /* 移动端Banner关键样式 - 首屏立即渲染 */
      @media (max-width: 768px) {
        .mobile-banner-container {
          width: 100%;
          margin: 0;
          padding: 0;
          line-height: 0;
        }
        
        .mobile-banner {
          display: block;
          width: 100%;
          height: auto;
          margin: 0;
          padding: 0;
          border: none;
          vertical-align: top;
          image-rendering: optimizeSpeed;
        }
        

      }

      /* 全局键盘焦点样式 */
      .focus-visible-ring:focus-visible {
        outline: 2px solid #ef4444; /* red-500 */
        outline-offset: 2px;
        border-radius: 0.25rem;
      }

      /* 🚀 SPEED INDEX终极优化 - 移动端Banner立即显示 */
      .mobile-banner-container {
        width: 100%;
        height: 200px;
        margin: 0;
        padding: 0;
        position: relative;
        overflow: hidden;
        contain: layout style paint;
        transform: translateZ(0);
        backface-visibility: hidden;
        will-change: transform;
        isolation: isolate;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .mobile-banner-instant-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        opacity: 1;
        transition: opacity 0.3s ease;
        /* 立即显示的CSS背景作为占位符 */
        background: linear-gradient(135deg, #dc2626 0%, #b91c1c 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 20px;
        font-weight: bold;
        text-align: center;
      }
      
      .mobile-banner-instant-bg::after {
        content: "专业工程机械";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        white-space: nowrap;
      }

      .mobile-banner-optimized {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center center;
        z-index: 2;
        opacity: 0;
        transition: opacity 0.3s ease;
      }

      .mobile-banner-optimized.loaded {
        opacity: 1;
      }

      .mobile-banner-optimized.loaded + .mobile-banner-instant-bg {
        opacity: 0;
      }

      /* 关键路径图片 - 立即显示 */
      .critical-path-image {
        opacity: 1 !important;
        visibility: visible !important;
        transform: none !important;
        animation: none !important;
        will-change: auto !important;
        contain: layout style paint;
      }

      /* 产品图片极致优化 */
      .product-image-ultra {
        width: 100%;
        height: 200px;
        background: #f9fafb;
        border-radius: 8px;
        overflow: hidden;
        contain: layout style paint;
        position: relative;
      }

      .product-image-micro {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #e5e7eb, #f3f4f6);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6b7280;
        font-size: 14px;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
      }

      .product-image-full {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        z-index: 2;
        transition: opacity 0.3s ease;
      }

      /* 移动端特殊优化 - Speed Index关键 */
      @media (max-width: 768px) {
        
        /* 移动端响应式优化 - 保持所有内容可见 */
        .mobile-optimized {
          padding: 1rem !important;
          margin-bottom: 2rem !important;
        }
        
        /* 移动端组件间距优化 */
        section {
          padding: 2rem 1rem !important;
        }
        
        .max-w-7xl {
          padding-left: 1rem !important;
          padding-right: 1rem !important;
        }
        
        /* 移动端图片立即优化 */
        .mobile-image-optimized {
          max-width: 100vw;
          width: 100%;
          height: auto;
          object-fit: cover;
          image-rendering: optimizeSpeed;
          image-rendering: -webkit-optimize-contrast;
        }
        
        /* 🚀 激进优化：移动端完全禁用动画 */
        *, *::before, *::after {
          animation: none !important;
          transition: none !important;
          transform: none !important;
          will-change: auto !important;
        }

        /* 移动端Banner智能加载优化 */
        .mobile-banner-instant-bg {
          opacity: 1 !important;
          visibility: visible !important;
        }
        
        .mobile-banner-optimized {
          image-rendering: optimizeSpeed;
          image-rendering: -webkit-optimize-contrast;
        }
      }

      /* 延迟加载图片 - 简化版本 */
      .lazy-image {
        opacity: 0;
        transition: opacity 0.2s ease;
      }

      .lazy-image.loaded {
        opacity: 1;
      }

      /* 骨架屏占位符 - 简化版本 */
      .skeleton-image {
        background: #f0f0f0;
        animation: none; /* 移动端禁用动画 */
      }

      /* 内存优化 */
      .memory-efficient-image {
        content-visibility: auto;
        contain-intrinsic-size: 200px;
      }

      /* 🚀 极致Speed Index优化 - CSS背景已内置GPU加速 */
      .mobile-banner-css-only {
        /* GPU加速已在主样式中定义 */
      }
    </style>
    
    <!-- 🚀 SPEED INDEX极致优化 - 完全内联关键CSS，0网络请求 -->
    
    <!-- 🚀 Speed Index优化 - 移除旧的预加载，使用极简图片 -->
    
    <title>{title}</title>
  </head>
  <body>
    <!-- 🚀 Speed Index优化 - 移除预加载元素，减少DOM复杂度 -->
    
    <!-- 🚀 激进Speed Index优化 - 移动端延迟Header -->
    <div class="mobile-header-delayed">
      <Header />
    </div>
    
    <!-- 移动端极简Header -->
    <div class="mobile-header-minimal">
      <header class="bg-white sticky top-0 z-50 shadow-sm">
        <div class="flex items-center justify-between h-16 px-4">
          <a href="/" class="flex items-center space-x-2">
            <span class="text-xl font-bold text-gray-800">永安重工</span>
          </a>
          <a href="/contact" class="bg-red-600 text-white px-4 py-2 rounded font-bold text-sm">报价</a>
        </div>
      </header>
    </div>
    
    <!-- 主要内容 -->
    <main id="main-content">
      <slot />
    </main>

    <!-- 🚀 Partytown优化的第三方脚本 - 在Web Worker中运行，不阻塞主线程 -->
    
    <!-- Google Analytics 4 - 暂时禁用，避免错误 -->
    
    <!-- 注意：请将GA_MEASUREMENT_ID替换为实际的Google Analytics ID -->
    <script type="text/partytown">
      // Google Analytics 4 基础配置
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-71JP66YM5X');
      // <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-THD2HH89" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    </script>
    <!-- <script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-71JP66YM5X"></script> -->
    <!-- 百度统计 - 暂时禁用，避免CORS错误 -->
    <!-- 
    注意：请将YOUR_BAIDU_ANALYTICS_ID替换为实际的百度统计ID
    <script type="text/partytown">
      var _hmt = _hmt || [];
      (function() {
        var hm = document.createElement("script");
        hm.src = "https://hm.baidu.com/hm.js?YOUR_ACTUAL_BAIDU_ID";
        var s = document.getElementsByTagName("script")[0]; 
        s.parentNode.insertBefore(hm, s);
      })();
    </script>
    -->

        <!-- 🚀 Speed Index极简JavaScript -->
    <script>
      // 移动端极简逻辑
      if (window.innerWidth <= 768) {
        // 立即显示Banner图片
        setTimeout(function() {
          const img = document.querySelector('.mobile-banner-optimized');
          if (img) img.classList.add('loaded');
        }, 100);
        
        // 延迟加载其他内容
        setTimeout(function() {
          document.body.classList.add('mobile-content-loaded');
        }, 3000);
      }
    </script>

    <!-- 🚀 移动端延迟Footer -->
    <div class="mobile-footer-delayed">
      <FooterSection />
    </div>

    <!-- 🚀 Partytown脚本 - 延迟加载，不阻塞首屏 -->
    
    <!-- 客服系统 - 延迟2秒后通过Partytown加载 -->
    <script>
      setTimeout(function() {
        const script1 = document.createElement('script');
        script1.type = 'text/partytown';
        script1.innerHTML = 'window.CustomerService = { init: function() { console.log("客服系统已通过Partytown初始化"); }, showChat: function() { console.log("显示聊天窗口"); } }; setTimeout(function() { window.CustomerService.init(); }, 2000);';
        document.head.appendChild(script1);
      }, 2000);
    </script>

    <!-- HubSpot表单 - 延迟2秒后通过Partytown加载 -->
    <script type="text/partytown">
      setTimeout(function() {
        const script2 = document.createElement('script');
        script2.type = 'text/partytown';
        script2.innerHTML = 'window.hbspt = window.hbspt || {}; window.hbspt.forms = window.hbspt.forms || {}; window.hbspt.forms.create = function(options) { console.log("HubSpot表单已通过Partytown初始化", options); };';
        document.head.appendChild(script2);
      }, 2000);
    </script>


  <script  type="text/partytown">
    var _hmt = _hmt || [];
    (function() {
      var hm = document.createElement("script");
      hm.src = "https://huazhicloud.oss-cn-beijing.aliyuncs.com/hzchat/dist/livechat.js?time="+new Date().getTime();
      hm.setAttribute('_extID',"1141-1153-lAj5UiTG");
        var s = document.getElementsByTagName("script")[0]; 
        s.parentNode.insertBefore(hm, s);
      })();
    </script>
  </body>
</html> 