    <!-- 🎬 动画系统 - 使用专用组件 -->
    <AnimationSystem 
      enableAnimations={true}
      enableCounters={true}
      animationStrategy="smart"
      enableDebug={import.meta.env.DEV}
    />

    <!-- 视图切换功能 -->
    <script type="text/partytown" src="/scripts/viewToggle.js"></script>

    <FooterSection />
    <!-- 🎯 Body Bottom 位置动态脚本加载器 - 插入到 <body> 标签结束前 -->
    <DynamicScriptLoader 
      position="body-bottom" 
      pageType={pageType}
      lang={lang}
    />
  </body>
</html>
