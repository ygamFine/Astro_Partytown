---
import Header from "../components/Header.astro";
import FooterSection from "../components/FooterSection.astro";

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "山东永安建设机械集团有限公司 - 专业工程机械制造商",
} = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- 性能优化 - DNS预解析 -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link rel="dns-prefetch" href="//www.googletagmanager.com" />
    
    <!-- 字体预连接 - 最高优先级 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- 性能提示 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#dc2626" />
    <meta name="color-scheme" content="light" />
    
    <!-- LCP关键资源预加载 - 强制刷新缓存 -->
    <link rel="preload" href="/images/shouji-banner1-ultra.webp?v=3" as="image" type="image/webp" fetchpriority="high" media="(max-width: 768px)" />
    <link rel="preload" href="/images/optimized/banner3-optimized.webp?v=3" as="image" type="image/webp" fetchpriority="high" media="(min-width: 769px)" />
    <link rel="preload" href="/images/logo.webp?v=3" as="image" fetchpriority="high" />
    <link rel="preload" href="/main-product.svg?v=3" as="image" fetchpriority="high" media="(min-width: 769px)" />
    
    <!-- 系统字体优化 - 避免网络字体阻塞 -->
    <style>
      /* 系统字体定义 - 避免外部字体加载 */
      :root {
        --font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Microsoft YaHei', system-ui, sans-serif;
      }
    </style>

    <!-- SEO优化 -->
    <meta
      name="keywords"
      content="滑移装载机,工程机械,建筑设备,山东永安,YONAN"
    />
    <meta name="author" content="山东永安建设机械集团有限公司" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- 关键CSS内联 - 立即渲染，防止CLS -->
    <style>
      /* CSS重置和基础样式 */
      *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      html {
        scroll-behavior: smooth;
        font-size: 62.5%; /* 1rem = 10px */
      }

      body {
        font-family: var(--font-family);
        font-size: 1.6rem;
        line-height: 1.6;
        color: #333;
        background: #fff;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -webkit-text-size-adjust: 100%;
        text-rendering: optimizeLegibility;
        overflow-x: hidden;
      }
      
      /* 容器样式 */
      .container {
        max-width: 120rem;
        margin: 0 auto;
        padding: 0 1rem;
      }
      
      /* Banner关键样式 - 防止CLS */
      .mobile-full-width {
        position: relative;
        width: 100%;
        height: 40rem;
        overflow: hidden;
      }
      
      @media (max-width: 768px) {
        .mobile-full-width {
          width: 100vw;
          height: 20rem;
          left: 50%;
          margin-left: -50vw;
        }
      }

      /* Banner容器预设尺寸 */
      .banner-container {
        width: 100%;
        height: 80rem;
        position: relative;
        overflow: hidden;
        background: #f8fafc;
      }

      @media (max-width: 768px) {
        .banner-container {
          height: 20rem;
        }
      }

      .banner-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        will-change: auto;
      }

      /* 移动端轮播图优化 */
      .mobile-banner-container {
        width: 100%;
        height: 20rem;
        position: relative;
        overflow: hidden;
        background: #f8fafc;
      }
      
      .mobile-slide {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
        will-change: opacity;
      }
      
      .mobile-slide.active {
        opacity: 1;
      }
      
      .mobile-banner {
        width: 100%;
        height: 20rem;
        object-fit: cover;
        object-position: center;
        will-change: auto;
      }

      /* 产品卡片预设尺寸 */
      .product-card {
        width: 100%;
        height: 32rem;
        display: block;
        border-radius: 0.8rem;
        overflow: hidden;
        background: #f9fafb;
        transition: transform 0.2s ease;
      }

      .product-card:hover {
        transform: translateY(-0.2rem);
      }

      .product-card img {
        width: 100%;
        height: 20rem;
        object-fit: cover;
        will-change: auto;
      }

      /* Header固定高度 */
      header {
        height: 8rem;
        position: relative;
        z-index: 50;
      }

      @media (max-width: 768px) {
        header {
          height: 6rem;
        }
      }

      /* 按钮样式 */
      .btn-primary {
        background: #dc2626;
        color: white;
        padding: 1.2rem 2.4rem;
        border-radius: 0.8rem;
        font-weight: 700;
        font-size: 1.6rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
      }

      .btn-primary:hover {
        background: #b91c1c;
        transform: translateY(-0.1rem);
      }

      .btn-secondary {
        background: #e5e7eb;
        color: #1f2937;
        padding: 1.2rem 2.4rem;
        border-radius: 0.8rem;
        font-weight: 700;
        font-size: 1.6rem;
        text-decoration: none;
        display: inline-block;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
      }

      .btn-secondary:hover {
        background: #d1d5db;
        transform: translateY(-0.1rem);
      }

      /* 响应式文本 */
      .text-lg {
        font-size: 1.8rem;
        line-height: 1.75;
      }

      @media (min-width: 768px) {
        .text-lg {
          font-size: 2rem;
          line-height: 1.75;
        }
      }
      
      .text-gray-700 { color: #374151; }
      .mt-6 { margin-top: 2.4rem; }
      .mt-8 { margin-top: 3.2rem; }
      .max-w-md { max-width: 28rem; }
      .mx-auto { margin-left: auto; margin-right: auto; }
      .text-center { text-align: center; }
      .flex { display: flex; }
      .justify-center { justify-content: center; }
      .space-x-4 > :not([hidden]) ~ :not([hidden]) { margin-left: 1.6rem; }

      @media (min-width: 768px) {
        .md\\:mx-0 { margin-left: 0; margin-right: 0; }
        .md\\:text-left { text-align: left; }
        .md\\:justify-start { justify-content: flex-start; }
      }

      /* 导航菜单 */
      .menu-item.active {
        color: #fbbf24;
        font-weight: bold;
      }

      /* 页面加载优化 */
      .animate-page-load {
        animation: fadeIn 0.2s ease-out;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(1rem); }
        to { opacity: 1; transform: translateY(0); }
      }

      /* 图片懒加载优化 */
      img[loading="lazy"] {
        opacity: 0;
        transition: opacity 0.3s;
      }

      img[loading="lazy"].loaded {
        opacity: 1;
      }

      /* 移动端优化 */
      @media (max-width: 768px) {
        .desktop-content { display: none !important; }
        .mobile-banner-container { display: block !important; }
        
        .container {
          padding: 0 0.8rem;
        }
        
        .btn-primary, .btn-secondary {
          padding: 1rem 2rem;
          font-size: 1.4rem;
        }
      }

      /* 桌面端优化 */
      @media (min-width: 769px) {
        .mobile-banner-container { display: none !important; }
        .desktop-content { display: block !important; }
      }

      /* 性能优化 - 减少重绘 */
      .banner-slide, .mobile-slide {
        backface-visibility: hidden;
        perspective: 1000px;
      }

      /* 滚动优化 */
      html {
        scroll-behavior: smooth;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
        
        *, *::before, *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>

    <title>{title}</title>
  </head>
  <body class="animate-page-load">
    <Header />
    
    <main id="main-content">
      <slot />
    </main>

    <!-- 延迟加载分析脚本 - 不阻塞渲染 -->
    <script>
      // 延迟加载Google Analytics - 5秒后加载
      setTimeout(() => {
        const script1 = document.createElement('script');
        script1.async = true;
        script1.src = 'https://www.googletagmanager.com/gtag/js?id=G-71JP66YM5X';
        document.head.appendChild(script1);
        
        script1.onload = () => {
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', 'G-71JP66YM5X', {
            page_title: document.title,
            page_location: window.location.href
          });
        };
      }, 5000);

      // 延迟加载客服脚本 - 8秒后加载
      setTimeout(() => {
        const script2 = document.createElement('script');
        script2.src = 'https://cdn.huazhi.cloud/hzchat/dist/livechat.js?time=' + new Date().getTime();
        script2.setAttribute('_extID', '309-313-7n1iAECE');
        document.head.appendChild(script2);
      }, 8000);

      // 图片懒加载优化
      if ('IntersectionObserver' in window) {
        const imageObserver = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              const img = entry.target;
              img.classList.add('loaded');
              imageObserver.unobserve(img);
            }
          });
        });

        document.addEventListener('DOMContentLoaded', () => {
          const images = document.querySelectorAll('img[loading="lazy"]');
          images.forEach(img => imageObserver.observe(img));
        });
      }
    </script>

    <FooterSection />
  </body>
</html>
