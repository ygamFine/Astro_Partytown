---
import Header from '../components/Header.astro';
import FooterSection from '../components/FooterSection.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "山东永安建设机械集团有限公司 - 专业工程机械制造商" } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO优化 -->
    <meta name="keywords" content="滑移装载机,工程机械,建筑设备,山东永安,YONAN" />
    <meta name="author" content="山东永安建设机械集团有限公司" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- 性能优化 -->
    <meta name="theme-color" content="#e60012" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- 🚀 Speed Index极致预加载 - 关键资源立即加载 -->
    <link rel="preload" href="/images/mobile-banner-tiny.svg" as="image" media="(max-width: 768px)" fetchpriority="high" />
    <link rel="preload" href="/main-product.svg" as="image" media="(min-width: 769px)" fetchpriority="low" />
    
    <!-- DNS预连接优化 -->
    <link rel="preconnect" href="https://www.googletagmanager.com" />
    <link rel="preconnect" href="https://www.google-analytics.com" />
    <link rel="preconnect" href="https://hm.baidu.com" />
    <link rel="preconnect" href="https://zz.bdstatic.com" />
    
    <!-- 移动端关键CSS内联 - 首屏渲染优化 -->
    <style>
      /* 关键渲染路径CSS - 完全内联 */
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body { 
        margin: 0; 
        font-family: system-ui, -apple-system, sans-serif;
        line-height: 1.6;
        color: #333;
        background: #fff;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }
      
      /* LCP关键元素 - 立即显示 */
      .lcp-critical {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
        transition: none !important;
        will-change: auto !important;
        contain: layout style paint;
      }
      
      /* 关键内容样式 - 内联 */
      .text-4xl { font-size: 2.25rem; line-height: 2.5rem; }
      .font-bold { font-weight: 700; }
      .text-gray-800 { color: #1f2937; }
      .mb-4 { margin-bottom: 1rem; }
      .text-center { text-align: center; }
      .py-20 { padding-top: 5rem; padding-bottom: 5rem; }
      .bg-gray-50 { background-color: #f9fafb; }
      .container { max-width: 80rem; margin-left: auto; margin-right: auto; padding-left: 1rem; padding-right: 1rem; }
      .mx-auto { margin-left: auto; margin-right: auto; }
      .px-4 { padding-left: 1rem; padding-right: 1rem; }
      .mb-16 { margin-bottom: 4rem; }
      .text-xl { font-size: 1.25rem; line-height: 1.75rem; }
      .text-gray-600 { color: #4b5563; }
      
      /* 隐藏非关键内容直到加载完成 */
      .non-critical {
        opacity: 0;
        visibility: hidden;
      }
      
      .loaded .non-critical {
        opacity: 1;
        visibility: visible;
        transition: opacity 0.3s ease-out;
      }
      
      /* 加载屏幕优化 */
      .loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 9999;
        transition: opacity 0.3s ease-out;
      }
      
      .loading-screen.hidden {
        opacity: 0;
        pointer-events: none;
      }
      
      .spinner {
        width: 40px;
        height: 40px;
        border: 3px solid #f3f3f3;
        border-top: 3px solid #e60012;
        border-radius: 50%;
        animation: spin 1s linear infinite;
      }
      
      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
      
      /* 关键布局样式 */
      .grid { display: grid; }
      .grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
      .gap-12 { gap: 3rem; }
      .items-center { align-items: center; }
      .space-y-8 > :not([hidden]) ~ :not([hidden]) { margin-top: 2rem; }
      .leading-tight { line-height: 1.25; }
      .text-red-600 { color: #dc2626; }
      .text-lg { font-size: 1.125rem; line-height: 1.75rem; }
      .leading-relaxed { line-height: 1.625; }
      
      @media (min-width: 1024px) {
        .lg\\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
        .lg\\:text-left { text-align: left; }
      }
      
      /* 极致优化：预定义关键元素样式 */
      h1, h2, h3 {
        opacity: 1 !important;
        transform: none !important;
        animation: none !important;
        will-change: auto !important;
      }

      /* 移动端Banner关键样式 - 首屏立即渲染 */
      @media (max-width: 768px) {
        .mobile-banner-container {
          width: 100%;
          margin: 0;
          padding: 0;
          line-height: 0;
        }
        
        .mobile-banner {
          display: block;
          width: 100%;
          height: auto;
          margin: 0;
          padding: 0;
          border: none;
          vertical-align: top;
          image-rendering: optimizeSpeed;
        }
        

      }

      /* 全局键盘焦点样式 */
      .focus-visible-ring:focus-visible {
        outline: 2px solid #ef4444; /* red-500 */
        outline-offset: 2px;
        border-radius: 0.25rem;
      }

      /* 🚀 SPEED INDEX极致优化 - 内联所有关键CSS */
      /* 移动端Banner极致优化 - 0延迟显示 */
      .mobile-banner-ultra {
        width: 100%;
        height: 200px;
        margin: 0;
        padding: 0;
        line-height: 0;
        overflow: hidden;
        contain: layout style paint;
        will-change: auto;
        position: relative;
        background: #dc2626; /* 立即显示红色背景 */
      }

      .mobile-banner-micro {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 200px;
        background: #dc2626;
        color: white;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        margin: 0;
        padding: 0;
        border: none;
        opacity: 1 !important;
        visibility: visible !important;
        z-index: 3;
        position: relative;
        transform: none !important;
        animation: none !important;
        will-change: auto !important;
      }

      .mobile-banner-progressive {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        z-index: 2;
        transition: opacity 0.3s ease;
        object-fit: cover;
        image-rendering: optimizeSpeed;
      }

      /* 关键路径图片 - 立即显示 */
      .critical-path-image {
        opacity: 1 !important;
        visibility: visible !important;
        transform: none !important;
        animation: none !important;
        will-change: auto !important;
        contain: layout style paint;
      }

      /* 产品图片极致优化 */
      .product-image-ultra {
        width: 100%;
        height: 200px;
        background: #f9fafb;
        border-radius: 8px;
        overflow: hidden;
        contain: layout style paint;
        position: relative;
      }

      .product-image-micro {
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #e5e7eb, #f3f4f6);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6b7280;
        font-size: 14px;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 1;
      }

      .product-image-full {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        z-index: 2;
        transition: opacity 0.3s ease;
      }

      /* 移动端特殊优化 - Speed Index关键 */
      @media (max-width: 768px) {
        /* 立即显示移动端Banner */
        .mobile-banner-micro {
          opacity: 1 !important;
          visibility: visible !important;
          transform: none !important;
          animation: none !important;
          will-change: auto !important;
          display: flex !important;
        }
        
        /* 隐藏桌面端内容以减少DOM复杂度 */
        .mobile-hide, .hidden.md\\:block {
          display: none !important;
          visibility: hidden !important;
          height: 0 !important;
          overflow: hidden !important;
        }
        
        /* 移动端图片立即优化 */
        .mobile-image-optimized {
          max-width: 100vw;
          width: 100%;
          height: auto;
          object-fit: cover;
          image-rendering: optimizeSpeed;
          image-rendering: -webkit-optimize-contrast;
        }
        
        /* 禁用所有动画和过渡以加速渲染 */
        *, *::before, *::after {
          animation-delay: 0s !important;
          animation-duration: 0s !important;
          transition-delay: 0s !important;
          transition-duration: 0s !important;
        }

        /* 除了关键的Banner过渡 */
        .mobile-banner-progressive {
          transition: opacity 0.2s ease !important;
        }
      }

      /* 延迟加载图片 - 简化版本 */
      .lazy-image {
        opacity: 0;
        transition: opacity 0.2s ease;
      }

      .lazy-image.loaded {
        opacity: 1;
      }

      /* 骨架屏占位符 - 简化版本 */
      .skeleton-image {
        background: #f0f0f0;
        animation: none; /* 移动端禁用动画 */
      }

      /* 内存优化 */
      .memory-efficient-image {
        content-visibility: auto;
        contain-intrinsic-size: 200px;
      }

      /* 🚀 极致Speed Index优化 - 强制GPU加速关键元素 */
      .mobile-banner-ultra,
      .mobile-banner-micro,
      .mobile-banner-progressive {
        transform: translateZ(0);
        backface-visibility: hidden;
        perspective: 1000px;
      }
    </style>
    
    <!-- 🚀 SPEED INDEX极致优化 - 完全内联关键CSS，0网络请求 -->
    
    <!-- Mobile banner preload -->
    <link rel="preload" href="/images/mobile-banner-fast.svg" as="image" media="(max-width: 768px)">
    
    <title>{title}</title>
  </head>
  <body>
    <!-- Mobile banner preload element -->
    <div class="mobile-banner-preload"></div>
    
    <Header />
    
    <!-- 最小化加载屏幕 -->
    <div id="loading-screen" class="loading-screen">
      <div class="spinner"></div>
    </div>
    
    <!-- 主要内容 -->
    <main id="main-content">
      <slot />
    </main>

    <!-- Partytown优化的第三方脚本 -->
    
    <!-- Google Analytics 4 - 使用Partytown优化 -->
    <script type="text/partytown">
      // Google Analytics 4 基础配置
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'GA_MEASUREMENT_ID');
    </script>
    <script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>

    <!-- 百度统计 - 使用Partytown优化 -->
    <script type="text/partytown">
      var _hmt = _hmt || [];
      (function() {
        var hm = document.createElement("script");
        hm.src = "https://hm.baidu.com/hm.js?YOUR_BAIDU_ANALYTICS_ID";
        var s = document.getElementsByTagName("script")[0]; 
        s.parentNode.insertBefore(hm, s);
      })();
    </script>

    <!-- 客服系统 - 使用Partytown优化 -->
    <script type="text/partytown">
      // 模拟客服系统初始化
      window.CustomerService = {
        init: function() {
          console.log('客服系统已通过Partytown初始化');
          // 这里可以添加实际的客服系统代码
        },
        showChat: function() {
          console.log('显示聊天窗口');
        }
      };
      
      // 延迟初始化客服系统
      setTimeout(function() {
        window.CustomerService.init();
      }, 2000);
    </script>

        <!-- 🚀 极简JavaScript - 仅关键功能，延迟加载其他 -->
    <script>
      // 立即隐藏加载屏幕
      document.addEventListener('DOMContentLoaded', () => {
        const loadingScreen = document.getElementById('loading-screen');
        if (loadingScreen) {
          loadingScreen.style.display = 'none';
        }
        document.body.classList.add('loaded');
      });

      // 移动端图片加载优化 - 内联关键逻辑
      document.addEventListener('DOMContentLoaded', () => {
        const bannerImage = document.querySelector('.mobile-banner-progressive') as HTMLImageElement;
        if (bannerImage && window.innerWidth <= 768) {
          bannerImage.addEventListener('load', function(this: HTMLImageElement) {
            this.style.opacity = '1';
            console.log('Banner loaded');
          });
          
          if (bannerImage.complete) {
            bannerImage.style.opacity = '1';
          }
        }
      });
    </script>

    <FooterSection />

    <!-- jQuery 条件加载 - 仅桌面端 -->
    <script>
      // 仅在桌面端加载jQuery以优化移动端Speed Index
      if (window.innerWidth >= 768) {
        // 动态加载jQuery
        const jqueryScript = document.createElement('script');
        jqueryScript.src = 'https://code.jquery.com/jquery-3.7.1.min.js';
        jqueryScript.integrity = 'sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=';
        jqueryScript.crossOrigin = 'anonymous';
        jqueryScript.onload = function() {
          // jQuery加载完成后加载测试脚本
          const testScript = document.createElement('script');
          testScript.src = '/js/jquery-test.js';
          document.head.appendChild(testScript);
        };
        document.head.appendChild(jqueryScript);
      }
    </script>
  </body>
</html> 