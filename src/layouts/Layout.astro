---
import Header from "../components/Custom/Layout/Header.astro";
import FooterSection from "../components/common/layout/FooterSection.astro";
import MobileBottomMenu from "../components/common/layout/MobileBottomMenu.astro";
import DynamicScriptLoader from "../components/common/analytics/DynamicScriptLoader.astro";
import PagefindPreloader from "../components/common/analytics/PagefindPreloader.astro";
import RightSidebar from "../components/common/RightSidebar.astro";
import ContactModal from "../components/common/contact/ContactModal.astro";
import { getSiteConfiguration } from "../apis/common.js";
import { ClientRouter } from 'astro:transitions';

// 官方推荐：只在根 Layout 导入一次全局样式
import "../styles/global.css";
import "../styles/components.css";

export interface Props {
  title: string;
  description?: string;
  lang?: string;
  pageType?: string;
}

const {
  title,
  description = '',
  lang = "en",
  pageType = "home",
} = Astro.props;

// 获取网站配置信息
let siteConfiguration = {};
try {
  siteConfiguration = await getSiteConfiguration(lang);
} catch (error) {
  siteConfiguration = {};
}
// 页面宽度配置 - 由各页面组件自行管理
// 每个页面组件应在其自己的文件中定义 pageWidth

// RTL 语言列表
const RTL_LANGUAGES = ['ar'];
const isRTL = RTL_LANGUAGES.includes(lang);
const htmlDir = isRTL ? 'rtl' : 'ltr';
---

<!doctype html>
<html lang={lang} dir={htmlDir}>
  <head>
    
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
    <meta http-equiv="x-dns-prefetch-control" content="on">
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- 简化的字体加载优化 -->
    <link rel="preload" href="/fontIcons/iconfont.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fontIcons/iconfont.css" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link rel="stylesheet" href="/fontIcons/iconfont.css" /></noscript>
    
    <!-- Antonio 字体预加载 -->
    <link rel="preload" href="/fonts/Antonio-Regular.ttf" as="font" type="font/ttf" crossorigin />
    <link rel="preload" href="/fonts/Antonio-SemiBold.ttf" as="font" type="font/ttf" crossorigin />

    <!-- 阿拉伯语字体预加载（仅阿语时预连接与预加载） -->
    {isRTL && (
      <>
        <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link 
          rel="preload" 
          href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;500;600;700&display=swap" 
          as="style" 
          onload="this.onload=null;this.rel='stylesheet'"
        />
        <noscript>
          <link 
            href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;500;600;700&display=swap" 
            rel="stylesheet"
          />
        </noscript>
      </>
    )}
    
    <!-- SEO优化 -->
    {description && (
      <meta name="description" content={description} />
    )}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- 🎯 Header 位置动态脚本加载器 - 插入到 <head> 标签内 -->
    <!-- <DynamicScriptLoader 
      position="header" 
      pageType={pageType}
      lang={lang}
    /> -->
    <!-- <ClientRouter /> -->
    <title>{title}</title>
  </head>
  <body data-pagefind-body>
    <!-- 🎯 Body Top 位置动态脚本加载器 - 插入到 <body> 标签开始处 -->
    <!-- <DynamicScriptLoader 
      position="body-top" 
      pageType={pageType}
      lang={lang}
    /> -->

    <Header siteConfiguration={siteConfiguration} />
    
    <main data-pagefind-body id="main-content">
      <slot />
    </main>

    <!-- 全局右侧侧边栏 -->
    <RightSidebar lang={lang} data-pagefind-ignore />

    <!-- 联系表单模态 -->
    <ContactModal lang={lang} id="contactModal" data-pagefind-ignore />

    <!-- 移动端底部菜单 -->
    <MobileBottomMenu lang={lang} currentPath={Astro.url.pathname} />

    <!-- 🚀 Pagefind 预加载器 - 使用专用组件 -->
    <PagefindPreloader
      enableDebug={import.meta.env.DEV}
      pageType={pageType}
      lang={lang}
      currentPath={Astro.url.pathname}
      preloadStrategy="smart"
    />

    <!-- 视图切换功能 -->
    <script type="text/partytown" src="/scripts/viewToggle.js"></script>

    <FooterSection siteConfiguration={siteConfiguration}/>
    <!-- 🎯 Body Bottom 位置动态脚本加载器 - 插入到 <body> 标签结束前 -->
    <!-- <DynamicScriptLoader 
      position="body-bottom" 
      pageType={pageType}
      lang={lang}
    /> -->
  </body>
</html>
