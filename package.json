{
  "name": "astro---partytown",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --port 8888",
    "build": "astro build && npm run generate:sitemap && npm run generate:pagefind",
    "preview": "astro preview",
    "astro": "astro",
    "optimize:images:node": "node scripts/optimize-images-node.js",
    "download:strapi-images": "node scripts/download-strapi-images.js",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "generate:pagefind": "sh -c 'if find dist -name \"*.html\" -print -quit | grep -q .; then pagefind --site dist --output-path dist/pagefind --glob \"**/{products,news,case}/**/*.html\"; else echo \"No HTML found; skipping Pagefind\"; fi'",
    "copy:pagefind": "cp -r dist/pagefind .vercel/output/static/ 2>/dev/null || echo 'Pagefind files copied'"
  },
  "dependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/tailwind": "^6.0.2",
    "@astrojs/vercel": "^8.2.5",
    "@builder.io/partytown": "^0.10.3",
    "@pagefind/default-ui": "^1.3.0",
    "astro": "^5.9.3",
    "pagefind": "^1.3.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "astro-critters": "^2.2.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.3",
    "terser": "^5.43.1"
  }
}
